<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DoFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DoFlow"
    xmlns:views="clr-namespace:DoFlow.Views"
    Shell.TabBarBackgroundColor="#FF323232"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarUnselectedColor="Gray"
    Shell.NavBarIsVisible ="false"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="DoFlow">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#FF323232"/>
    </Shell.Behaviors>

    <ShellContent Route="AuthPage" ContentTemplate="{DataTemplate views:AuthPage}"/>


    <TabBar IsVisible="False">
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}"/>
        </Tab>
        <Tab Title="Einstellungen">
           <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
   

    

</Shell>
