<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DoFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DoFlow"
    xmlns:views="clr-namespace:DoFlow.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#FF323232"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#FF8C8C8C"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="DoFlow">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#FF323232"/>
    </Shell.Behaviors>

    <ShellContent
                Title="Auth"
                ContentTemplate="{DataTemplate views:AuthPage}"
                Route="AuthPage" />

    <TabBar>
        <Tab Title="Dashboard">
            <ShellContent Title="Dashboard"
                        ContentTemplate="{DataTemplate views:DashboardPage}"
                        Route="DashboardPage"/>
        </Tab>
        <Tab Title="Einstellungen">
           <ShellContent Title="Einstellungen"
                        ContentTemplate="{DataTemplate views:SettingsPage}"
                        Route="SettingsPage"/>
        </Tab>
    </TabBar>
   

    

</Shell>
